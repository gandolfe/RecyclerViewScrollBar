<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/myrecycler"
    android:layout_width="300dp"
    android:layout_height="400dp"
    />

    <com.example.recyclescroller.VerticalSeekBar
        android:id="@+id/myseekbar"
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:layout_marginTop="20dp"
        android:progress="40"
        android:max="100"
        android:thumbOffset="20dp"
        android:thumb="@mipmap/contact_scroll_thumb"
        android:progressDrawable="@drawable/scroller_progress"
        android:background="@android:color/holo_orange_light"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myrecyclertwo"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginLeft="50dp"
        />
    <com.example.recyclescroller.ScrollBar
        android:id="@+id/myscrollbar"
        android:layout_width="10dp"
        android:layout_height="400dp"
        android:visibility="invisible"/>



</LinearLayout>